<%= render "subnav" %>

<section class="container my-4">
  <table class="table border bg-white">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Feedback</th>
        <th scope="col"><span class="sr-only">actions</span></th>
      </tr>
    </thead>
    <tbody>
      <% @feedbacks.each do |feedback| %>
      <tr>
        <th class="d-flex align-items-center" scope="row">
          <div class="bg-secondary text-white text-center rounded p-1 mr-2"style="width:30px;">
            <%= feedback.customer.name[0..1] %>
          </div>
        </th>
        <td class="align-middle">
          <%= link_to feedback_path(feedback), class: "text-dark" do %>
            <%= feedback.description %>
          <% end %>
        </td>
        <td>
          <%= image_tag "icons/angry", alt: "angry emoji", width: 28, height: 28 %>
          <%= link_to "Attach", new_feedback_path, class: "btn btn-primary ml-1" %>
        </td>
      </tr>
     <% end %>
    </tbody>
  </table>
</section>





