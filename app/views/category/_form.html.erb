<div class="card">
  <form>
    <div class="card-body">
      <div class="form-group">
        <label for="exampleText">Name</label>
        <input type="text" id="exampleText" class="form-control">
      </div>
      <div class="form-group">
        <label for="exampleTextarea">Description</label>
        <textarea id="exampleTextarea" class="form-control"></textarea>
      </div>
    </div>
    <div class="card-footer bg-white">
      <div class="text-right">
        <%= link_to "Cancel", category_index_path, class: "btn btn-light" %>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>
  </form>
</div>
