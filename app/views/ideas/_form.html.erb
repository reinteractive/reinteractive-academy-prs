<div class="card">
  <%= form_for @idea do |f| %>
    <div class="card-body">
    <div class="form-group">
      <label for="select1">Initial Status</label>
      <%= f.collection_select :idea_status_ids, Status.all, :id, :stage,{}, class: "form-control" %>
      <div class="select2">Assigned to</div>
      <%= f.collection_select :staff_id, Staff.all, :id, :name,{}, class: "form-control" %>
      <div class="form-group">
        <label for="exampleTextarea">Description</label>
        <%= f.text_field :description, class:"form-control" %>
      </div>
    </div>
    <div class="card-footer bg-white">
      <div class="text-right">
        <%= link_to "Cancel", ideas_path, class: "btn btn-light" %>
        <%= f.submit %>
      </div>
    </div>
    </div>
  <% end %>
</div>
 