<div class="card">
  <form>
    <div class="card-body">
      <div class="form-group">
        <label for="select1">Initial Status</label>
        <select class="custom-select" id="select1">
          <option value="1" selected>PLANNED</option>
          <option value="2">RELEASE</option>
          <option value="3">BUILDING</option>
        </select>
      </div>
      <div class="select2">Assigned to</div>
      <div class="custom-select">
        <%= form_for @idea do |f| %>
        <%= f.fields_for :staffs do |fs| %>
        <%= fs.text_field :name %>
        <% end %>

      </div>

      <div <div class="form-group">
        <label for="exampleTextarea">Description</label>
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>


    <div class="card-footer bg-white">
      <div class="text-right">
        <%= link_to "Cancel", ideas_path, class: "btn btn-light" %>
        <%= f.submit %>
      </div>
      <% end %>
    </div>
  </form>
</div>

