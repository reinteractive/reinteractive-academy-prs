<div class="card">
<%= form_for ([@idea, @status]) do |f| %>
  <form>
    <div class="card-body">
      <div class="card">
    <%#= form_for @status do |f| %>
        <div class="card-body">
          <div class="form-group">
            <label for="select1">Initial Status</label>
            <%= f.collection_select :id, Status.all, :id, :stage,{}, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="exampleTextarea">Your Message</label>
        <%= f.text_field :message, class:"form-control" %>
       </div>
      <div class="custom-control custom-switch">
        <input type="checkbox" class="custom-control-input" id="customSwitch1">
        <label class="custom-control-label" for="customSwitch1">
          <strong>Notify your customers</strong><br>
          Send an email notification to your customers about this status
        </label>
      </div>
    </div>
    <div class="card-footer bg-white">
      <div class="text-right">
        <%= link_to "Cancel", ideas_path, class: "btn btn-light" %>
        <%= f.submit class: "btn btn-primary" %>
         
      </div>
    </div>
  </form>
<% end %>
</div>



 